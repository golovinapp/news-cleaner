{
  "manifest_version": 3,
  "name": "News Cleaner 🙅‍♀️",
  "version": "1.3.2",
  "description": "Hide/blur news items by keywords. RU/UK inflections, per-site toggle, allow/block lists, and a quick “Show” button.",
  "default_locale": "en",
  "permissions": ["storage", "contextMenus", "tabs", "activeTab"],
  "background": { "service_worker": "background.js" },
  "options_page": "options.html",
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "action": {
    "default_title": "News Cleaner 🙅‍♀️"
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
